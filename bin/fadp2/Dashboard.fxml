<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<!-- 
  Main container for the dashboard application.
  Uses a BorderPane to structure the layout into TOP, LEFT, CENTER, and BOTTOM sections.
  The xmlns has been updated to be compatible with JavaFX 9.
  Removed the '$' from text attributes to prevent FXML parsing errors.
-->
<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="root" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <!-- Header section containing menus and search bar -->
      <HBox alignment="CENTER_LEFT" styleClass="header" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="header-title" text="My Dashboard" />
            <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" styleClass="menu-button" text="Home" />
                  <Button mnemonicParsing="false" styleClass="menu-button" text="View" />
                  <Button mnemonicParsing="false" styleClass="menu-button" text="Help" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" styleClass="search-box">
               <children>
                  <TextField fx:id="searchField" promptText="Search..." styleClass="search-field" />
                  <Button mnemonicParsing="false" styleClass="search-button">
                      <graphic>
                          <!-- Placeholder for a search icon -->
                          <ImageView fitHeight="16" fitWidth="16" pickOnBounds="true" preserveRatio="true" />
                      </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </top>
   <left>
      <!-- Sidebar navigation menu -->
      <VBox styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="sidebar-button" text="Dashboard">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="sidebar-button" text="Analytics">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="sidebar-button" text="Reports">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
             <VBox VBox.vgrow="ALWAYS" />
            <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="sidebar-button" text="Settings">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
            <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="sidebar-button" text="Logout">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <!-- Main content area -->
      <VBox styleClass="content-area" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="content-title" text="Dashboard Overview" />
            <!-- Grid for summary cards -->
            <GridPane hgap="20.0" vgap="20.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <!-- Card 1: Total Revenue -->
                  <VBox styleClass="card" GridPane.columnIndex="0">
                     <children>
                        <Label styleClass="card-title" text="Total Revenue" />
                        <Label fx:id="totalRevenueLabel" styleClass="card-value" text="125,670" />
                        <Label styleClass="card-subtitle" text="+12% from last month" />
                     </children>
                  </VBox>
                  <!-- Card 2: Subscriptions -->
                  <VBox styleClass="card" GridPane.columnIndex="1">
                     <children>
                        <Label styleClass="card-title" text="Subscriptions" />
                        <Label fx:id="subscriptionsLabel" styleClass="card-value" text="+2,350" />
                         <Label styleClass="card-subtitle" text="+180 this week" />
                     </children>
                  </VBox>
                  <!-- Card 3: Sales -->
                  <VBox styleClass="card" GridPane.columnIndex="2">
                     <children>
                        <Label styleClass="card-title" text="Sales" />
                        <Label fx:id="salesLabel" styleClass="card-value" text="+12,345" />
                         <Label styleClass="card-subtitle" text="-5% from last month" />
                     </children>
                  </VBox>
                  <!-- Card 4: Active Now -->
                  <VBox styleClass="card" GridPane.columnIndex="3">
                     <children>
                        <Label styleClass="card-title" text="Active Now" />
                        <Label fx:id="activeNowLabel" styleClass="card-value" text="316" />
                         <Label styleClass="card-subtitle" text="Online" />
                     </children>
                  </VBox>
               </children>
            </GridPane>
            <!-- Sales chart -->
            <VBox styleClass="chart-container" VBox.vgrow="ALWAYS">
               <children>
                  <Label styleClass="chart-title" text="Sales Over Time" />
                  <LineChart fx:id="salesChart" VBox.vgrow="ALWAYS">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </LineChart>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <bottom>
       <!-- Status bar at the bottom -->
      <HBox alignment="CENTER_LEFT" styleClass="status-bar" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="statusLabel" text="Ready" />
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Version 1.0" />
               </children>
            </HBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
